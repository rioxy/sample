{
  "inbounds": [
    {
      "port": 443,
      "protocol": "vmess",
      "settings": {
        "clients": [
          {
            "id": "UUID",
            "level": 1,
            "alterId": 64
          }
        ],
        "disableInsecureEncryption": false
      },
      "streamSettings": {
        "network": "ws",
        "security": "tls",
        "wsSettings": {
          "path": "/your-websocket-path"
        },
        "tlsSettings": {
          "certificates": [
            {
              "certificateFile": "/path/to/fullchain.crt",
              "keyFile": "/path/to/private.key"
            }
          ]
        }
      }
    }
  ],
  "outbounds": [
    {
      "protocol": "freedom",
      "settings": {},
      "tag": "direct"
    },
    {
      "protocol": "blackhole",
      "settings": {},
      "tag": "block"
    },
    {
      "protocol": "vmess",
      "settings": {
        "vnext": [
          {
            "address": "your-destination-server-address",
            "port": 443,
            "users": [
              {
                "id": "UUID",
                "alterId": 64
              }
            ]
          }
        ]
      },
      "streamSettings": {
        "network": "tcp",
        "security": "tls"
      },
      "tag": "outbound"
    }
  ],
  "routing": {
    "domainStrategy": "IPIfNonMatch",
    "rules": [
      {
        "type": "field",
        "outboundTag": "outbound",
        "domain": ["your-destination-domain"]
      },
      {
        "type": "field",
        "outboundTag": "block",
        "domain": ["geosite:category-ads-all"]
      },
      {
        "type": "field",
        "outboundTag": "direct",
        "network": "udp,tcp",
        "ip": ["geoip:private"]
      },
      {
        "type": "field",
        "outboundTag": "direct",
        "network": "tcp",
        "ip": ["geoip:cn"]
      },
      {
        "type": "field",
        "outboundTag": "direct",
        "network": "tcp",
        "port": "53"
      },
      {
        "type": "field",
        "outboundTag": "direct",
        "network": "tcp",
        "domain": ["geosite:cn"]
      }
    ]
  }
}
