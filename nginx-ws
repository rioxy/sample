# Konfigurasi server Nginx
server {
  listen 81;
  listen [::]:81;
  server_name pt.riocourse.my.id;
  return 301 https://$server_name$request_uri;
}

server {
  listen 2443 ssl http2;
  listen [::]:2443 ssl http2;
  server_name pt.riocourse.my.id;

  # Lokasi file SSL
  ssl_certificate /etc/letsencrypt/live/pt.riocourse.my.id/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/pt.riocourse.my.id/privkey.pem;

  # Konfigurasi WebSocket
  location /v2ray {
    proxy_redirect off;
    proxy_pass http://127.0.0.1:443; # Ganti port V2Ray sesuai dengan konfigurasi Anda
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
  }

  # Konfigurasi web root
  root /var/www/pt.riocourse.my.id/html;
  index index.html;

  # Konfigurasi error page
  error_page 404 /404.html;
  location = /404.html {
    internal;
  }

  # Konfigurasi akses log
  access_log /var/log/nginx/pt.riocourse.my.id_access.log;
  error_log /var/log/nginx/pt.riocourse.my.id_error.log;

  # Konfigurasi SSL
  ssl_protocols TLSv1.2 TLSv1.3;
  ssl_prefer_server_ciphers on;
  ssl_ciphers ECDHE-RSA-AES256-GCM-SHA512:DHE-RSA-AES256-GCM-SHA512:ECDHE-RSA-AES256-GCM-SHA384:DHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-SHA384;

  # Konfigurasi header
  add_header Strict-Transport-Security "max-age=31536000; includeSubDomains" always;
  add_header X-Content-Type-Options "nosniff" always;
  add_header X-Frame-Options "SAMEORIGIN" always;
  add_header X-Xss-Protection "1; mode=block" always;
}
